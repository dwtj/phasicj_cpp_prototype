cc_library(
    name = "agent",
    srcs = ["agent.cc"],
    hdrs = ["agent.h"],
    deps = [
        "//phasicj:execution_cc_proto",
        "//third_party/jdk:jni_headers",
        "//third_party/jdk:jvmti_headers",
