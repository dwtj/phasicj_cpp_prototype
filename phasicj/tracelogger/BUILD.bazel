cc_library(
    name = "agent_static",
    srcs = ["agent_static.cc"],
    hdrs = ["agent_static.h"],
    linkstatic = True,
    visibility = ["//visibility:public"],
    deps = [":agent"],
    alwayslink = True,
)

cc_library(
    name = "agent_dynamic",
    srcs = ["agent_dynamic.cc"],
    visibility = ["//visibility:public"],
    deps = [":agent"],
)

cc_binary(
    name = "libpjtracelogger.so",
    linkshared = True,
    visibility = ["//visibility:public"],
    deps = ["agent_dynamic"],
