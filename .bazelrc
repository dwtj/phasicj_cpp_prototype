# Use remote version of Java 9:
build --host_java_toolchain=@bazel_tools//tools/jdk:toolchain_java9
build --java_toolchain=@bazel_tools//tools/jdk:toolchain_java9

# Give hints that test timeouts are an appropriate size/duration.
test --test_verbose_timeout_warnings

build --cxxopt='-std=c++11'
test  --cxxopt='-std=c++11'
run   --cxxopt='-std=c++11'
